{
  "name": "restaurant-soft",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:verbose": "nodemon --verbose server.js",
    "dev:debug": "nodemon --inspect server.js",
    "watch": "nodemon --watch routes --watch database --ext js,json,sql server.js",
    "dev:full": "concurrently \"npm run docker:dev\" \"npm run dev\"",
    "dev:watch": "node scripts/dev-watch.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "keywords": [
    "restaurant",
    "management",
    "pos"
  ],
  "author": "",
  "license": "ISC",
  "description": "Restaurant management system",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
